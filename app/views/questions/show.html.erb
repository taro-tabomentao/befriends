  <div class="btn-wrapper-inner-bottom">
    <p class="btn"><%= link_to "Edit this question", edit_country_question_path(@country, @question) %></p>
    <p class="btn"><%= link_to "Delete this question", country_question_path(@country, @question),method: :delete %></p>
  </div>
</section>

