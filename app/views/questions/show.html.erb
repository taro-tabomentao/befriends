<%= render "shared/header"%>

<section class="event-show"> 
  <div class="title">
    <h1><%= @question.title %></h1>
  </div>
  <div class="body">
    <div class="wrapper-bottom">
      <h2>Detail</h2>
      <p class="content">
        <%= @question.text %>
      </p>
    </div>
  </div>
</section>
