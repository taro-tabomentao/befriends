<%= render "shared/header"%>

<section class="showcase country-showcase">
  <div class="showcase-content">
    <h1><%= @country.name %></h1>
  </div>
</section>

<section class="tabs">
  <div class="container">
    <div id="tab-1" class="tab-item tab-border">
      <%= icon('fas', 'glass-cheers', class: 'icon') %>
      <p>Event</p>
    </div>
    <div id="tab-2" class="tab-item">
      <%= icon('fas', 'newspaper', class: 'icon') %>
      <p>Article</p>
    </div>
    <div id="tab-3" class="tab-item">
      <%= icon('fas', 'question', class: 'icon') %>
      <p>Q&A</p>
    </div>
  </div>
</section>

<section class="tab-content">
  <div class="container">
    <!-- Tab Content 1 -->
    <div id="tab-1-content" class="tab-content-item show">
      <div class="tab-1-content-inner">
        <div class="btn-newpost">
          <%= link_to "Start a new event", new_country_event_path(@country), class: "btn-lg" %>
        </div>
        <div class="latest-events">
          <h2>Latest Events</h2>
          <ul class="event-list">
            <% @events.each do |event| %>
              <li class="event-item">
                <%= link_to event_path(event.id) do %>
                  <div class="image"><%= image_tag event.image %></div>
                  <div class="title"><%= event.title %></div>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>  
    <!-- Tab Content 2 -->
    <div id="tab-2-content" class="tab-content-item">
      <div class="tab-2-content-inner">
        <div class="latest-articles">
          <h2>Latest Articles</h2>
        </div>
      </div>
    </div>  

    <!-- Tab Content 3 -->
    <div id="tab-3-content" class="tab-content-item">
      <div class="tab-3-content-inner">
        <div class="latest-questions">
          <h2>Latest Questions</h2>
        </div>
      </div>
    </div>  
</section>

<%= render "shared/footer"%>