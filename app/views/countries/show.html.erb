<%= render "shared/header"%>

<section class="country-showcase">
  <div class="country-showcase-content">
    <h1 class="orange"><%= @country.name %></h1>
  </div>
</section>

<section class="tabs">
  <div class="container">
    <div id="tab-1" class="tab-item tab-border">
      <%= icon('fas', 'glass-cheers', class: 'icon') %>
      <p>Event</p>
    </div>
    <div id="tab-2" class="tab-item">
      <%= icon('fas', 'newspaper', class: 'icon') %>
      <p>Article</p>
    </div>
    <div id="tab-3" class="tab-item">
      <%= icon('fas', 'question', class: 'icon') %>
      <p>Q&A</p>
    </div>
  </div>
</section>

<section class="tab-content">
  <div class="container">
    <%# タブコンテント イベント %>
    <div id="tab-1-content" class="tab-content-item show">
      <div class="tab-1-content-inner">
        <% if user_signed_in? %>
          <div class="newpost">
            <span class="heading-sm">Start a New Event?  </span>
            <%= link_to "Click here", new_event_path, class: "heading-sm link blue" %>
          </div>
        <% else %>
          <div class="newpost">
            <span class="heading-sm">Start a New Event?  </span>
            <%= link_to "Click here", new_user_session_path, class: "heading-sm link blue" %>
          </div>
        <% end %>
        <div class="wrapper-category">
          <h2 class="category">Latest Events</h2>
          <ul class="list-event">
            <% @events.each do |event| %>
              <li class="item-event">
                <%= link_to event_path(event.id) do %>
                  <div class="image-event"><%= image_tag event.image %></div>
                  <div class="title-event"><%= event.title %></div>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>  
    <!-- Tab Content 2 -->
    <div id="tab-2-content" class="tab-content-item">
      <div class="tab-2-content-inner">
        <% if user_signed_in? %>
          <div class="btn-newpost">
            <%= link_to "Write a New Article", new_article_path, class: "btn-lg" %>
          </div>
        <% else %>
          <div class="btn-newpost">
            <%= link_to "Write a New Article", new_user_session_path, class: "btn-lg" %>
          </div>
        <% end %>
        <div class="latest-articles">
          <h2>Latest Articles</h2>
          <ul class="article-list">
            <% @articles.each do |article| %>
              <li class="article-item">
                <%= link_to article_path(article.id) do %>
                  <div class="image"><%= image_tag article.image %></div>
                  <div class="title"><%= article.title %></div>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>  

    <!-- Tab Content 3 -->
    <div id="tab-3-content" class="tab-content-item">
      <div class="tab-3-content-inner">
        <% if user_signed_in? %>
          <div class="btn-newpost">
            <%= link_to "Ask Your Question", new_question_path, class: "btn-lg" %>
          </div>
        <% else %>
          <div class="btn-newpost">
            <%= link_to "Ask Your Question", new_user_session_path, class: "btn-lg" %>
          </div>
        <% end %>
        <div class="latest-questions">
          <h2>Latest Questions</h2>
          <ul class="question-list">
          <% @questions.each do |question| %>
            <li class="question-item">
              <%= link_to question_path(question.id) do %>
                <div class="upper-container">
                  <div class="status"><%= question.status.name %></div>
                  <div class="question-title"><%= question.title %></div>
                </div>
              <% end %>
            </li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>  
</section>

<%= render "shared/footer"%>