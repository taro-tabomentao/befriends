<%= render "shared/header"%>

<section class="input-field">
  <div class="container">
    <div class="container-inner">
      <div class="wrapper-title">
        <h2 class="title">Let's share great information  at the article!</h2>
      </div>

      <hr>

      <%= form_with model:@article, local: true, class: "input_management" do |f| %>
          <%= render 'shared/error_messages', model: f.object %>
          <div class="wrapper">
            <p class="question">Choose country of your article</p>
            <div><%= f.collection_select(:country_id, Country.all, :id, :name, {}, {class:"input"}) %></div>
          </div>
          
          <div class="wrapper">
            <p class="question">What is your article's title?</p>
            <div><%= f.text_field :title, class:"input" %></div>
          </div>

          <div class="wrapper">
            <p class="question">Choose a cateogry that describe your article</p>
            <div><%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"input"}) %></div>
          </div>

          <div class="wrapper">
            <p class="question">Write contents</p>
            <div><%= f.text_area :content, class:"input content" %></div>
          </div>

          <div class="wrapper">
            <p class="question">Please upload image for the article</p>
            <div><%= f.file_field :image %></div>
          </div>

          <div class='wrapper row'>
            <div><%= f.submit "Post", id: "register-btn", class: "btn"%></div>
          </div>

      <% end %>
    </div>
  </div>
</section>