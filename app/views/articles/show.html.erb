<%= render "shared/header"%>

<section class="event-show"> 
  <div class="title">
    <h1><%= @article.title %></h1>
  </div>
  <div class="body">
    <div class="top-info">
      <div class="image">
        <%= image_tag @article.image.variant(resize:'500x500') %>
      </div>
    </div>
    <div class="wrapper-bottom">
      <h2>Country</h2>
      <p class="content">
        <%= @article.country.name %>
      </p>
      <h2>Content</h2>
      <p class="content">
        <%= simple_format(@article.content) %>
      </p>
    </div>
  </div>
</section>
<% if user_signed_in? %>
  <section class="btn-wrapper"> 
    <div class="btn-wrapper-inner-top">
      <p class="btn"><%= link_to "Comment", new_article_comment_path( @article) %></p>
    </div>
    <% if current_user.id == @article.user_id %>
      <div class="btn-wrapper-inner-bottom">
        <p class="btn"><%= link_to "Edit this article", edit_article_path(@article) %></p>
        <p class="btn"><%= link_to "Delete this article", article_path(@article),method: :delete %></p>
      </div>
    <% end %>
  </section>
<% else %>
  <section class="btn-wrapper"> 
    <div class="btn-wrapper-inner-top">
      <p class="btn"><%= link_to "Comment", new_user_session_path %></p>
    </div>
  </section>
<% end %>
<section class="answer-wrapper">
  <div class="answers">
    <h2>Comments</h2>
    <ul class="answer-list">
      <% @comments.each do |comment| %>
        <li class="answer-item">
          <div class="upper-container">
            <div class="content"><%= simple_format(comment.content) %></div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</section>
<div class="footer">
  <%= render "shared/footer"%>
<div>