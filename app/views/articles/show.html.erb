<%= render "shared/header"%>

<section class="event-show"> 
  <div class="title">
    <h1><%= @article.title %></h1>
  </div>
  <div class="body">
    <div class="top-info">
      <div class="image">
        <%= image_tag @article.image.variant(resize:'500x500') %>
      </div>
    </div>
    <div class="wrapper-bottom">
      <h2>Content</h2>
      <p class="content">
        <%= @article.content %>
      </p>
    </div>
  </div>
</section>
<section class="btn-wrapper"> 
  <div class="btn-wrapper-inner-bottom">
    <p class="btn"><%= link_to "Edit this article", edit_country_article_path(@country, @article) %></p>
    <p class="btn"><%= link_to "Delete this article", country_article_path(@country, @article),method: :delete %></p>
  </div>
</section>

<div class="footer">
  <%= render "shared/footer"%>
<div>